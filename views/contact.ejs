<html>
    <head>
      <title>Contact Tom</title>
    </head>
    <body>
        <div class="row">
            <div class="container">
              
              <form class="col s12" action="/thanks" method="POST">
                  <div class="card  green darken-2">
                <div class="row">
                  <div class="input-field col s6">
                    <input  id="first_name" type="text" class="validate white-text">
                    <label for="first_name">First Name</label>
                  </div>
                  <div class="input-field col s6">
                    <input id="last_name" type="text" class="validate white-text">
                    <label for="last_name">Last Name</label>
                  </div>
                </div>
                <div class="row">
                  
                </div>
                
                <div class="row">
                  <div class="input-field col s12">
                    <input id="email" type="email" class="white-text validate ">
                    <label for="email">Email</label>
                  </div>
                </div>
                <div class="row">
                    <form class="col s12">
                      <div class="row">
                        <div class="input-field col s6">
                          <textarea id="icon_prefix2" class="materialize-textarea white-text"></textarea>
                          <label for="icon_prefix2">Message</label>
                        </div>
                        <a class="waves-effect waves-light btn  light-green darken-2" id="send" type="submit">Send</a>
                      </div>
                    </form>
                  </div>
                </div>
              </form>
            
          </div>
          </div>
    </body>
  </html>